v-dialog(:value="true" :max-width="400" persistent)
    v-card
        v-toolbar
            block title-icon
            v-toolbar-title
                | {{ title }}
        v-card-text
            block content
                div.subheading  {{text}}
        block footer
            v-divider
            v-card-actions
                v-btn( v-for="button in buttons" block @click="button.action" color="button.color")
                    v-icon {{button.icon}}
                    | {{button.text}}
