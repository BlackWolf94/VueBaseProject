{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/assets": [
        "src/assets/*"
      ],
      "@/components": [
        "src/components/*"
      ],
      "@/decorators": [
        "src/decorators/*"
      ],
      "@/directives": [
        "src/directives/*"
      ],
      "@/mixins": [
        "src/mixins/*"
      ],
      "@/helper": [
        "src/helper/*"
      ],
      "@/pages": [
        "src/pages/*"
      ],
      "@/plugins": [
        "src/plugins/*"
      ],
      "@/router": [
        "src/router/*"
      ],
      "@/api": [
        "src/services/api/*"
      ],
      "@/store": [
        "src/store/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
